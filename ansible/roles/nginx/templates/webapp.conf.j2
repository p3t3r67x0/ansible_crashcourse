server {
  server_name {{ domain_webapp }};
  listen 443 ssl http2;

  ssl_certificate /etc/letsencrypt/live/{{ domain_webapp }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ domain_webapp }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ domain_webapp }}/fullchain.pem;

  # enable session resumption to improve https performance
  # http://vincent.bernat.im/en/blog/2011-ssl-session-reuse-rfc5077.html
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 5m;
  ssl_stapling on;
  ssl_stapling_verify on;

  location /.well-known/acme-challenge {
    root /var/www/letsencrypt;
    try_files $uri $uri/ =404;
  }

  location / {
    proxy_pass http://{{ appserver_private_address }}:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Port $server_port;
  }
}
